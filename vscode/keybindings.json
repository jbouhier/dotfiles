// Place your key bindings in this file to overwrite the defaults
[
    // Toggle focus editor <-> terminal
    {
        "key": "cmd+escape",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "terminalFocus"
    },
    {
        "key": "cmd+escape",
        "command": "workbench.action.terminal.focus",
        "when": "!terminalFocus"
    },
    // Cycle split window panes
    {
        "key": "alt+tab",
        "command": "workbench.action.navigateEditorGroups"
    },
    // Toggle sidebar
    {
        "key": "cmd+e",
        "command": "workbench.action.toggleSidebarVisibility"
    },
    // Toggle activity bar (sidebar icons)
    {
        "key": "cmd+shift+a",
        "command": "workbench.action.toggleActivityBarVisibility"
    },
    // Toggle command center (top bar with search field)
    {
        "key": "cmd+b",
        "command": "toggle.window.commandCenter",
        "when": "!terminalFocus"
    },
    // Toogle minimalist mode
    {
        "key": "cmd+shift+h",
        "command": "runCommands",
        "args": {
            "commands": [
                "toggle.window.commandCenter",
                "breadcrumbs.toggle",
                "editor.action.toggleStickyScroll"
            ]
        }
    }
    // TODO: 
    // - Toggle breadcrumbs
    // - Toggle editor sticky scroll
]